# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
# alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
# alias s="rspec"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

alias rezc="zgen reset && source ~/.zshrc"
alias zc="subl ~/.zshrc"

alias sf='fasd -e subl'

# git
alias gs='git status'
alias gsh='git show'
alias gl='git log'
alias gdc='git diff --cached'


# tmux
alias t='tmux attach-session -t'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
